.col-md-offset-3.col-md-6
  .well.bs-component
    = form_for(resource, :html => {:class => 'form-horizontal'}, as: resource_name, url: session_path(resource_name)) do |f|
      %fieldset
        %legend
          Login
        .form-group
          %label{for: 'inputEmail', class:'col-md-2 control-label'}
            Email
          .col-md-10
            = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email', id: 'inputEmail'
        .form-group
          %label{for: 'inputPassword', class: 'col-md-2 control-label'}
            Password
          .col-md-10
            = f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'Password'
        .form-group
          .col-md-offset-2.col-md-10
            .checkbox
              %label
                = f.check_box :remember_me
                /%span.checkbox-material
                /  %span.check
                Remember me
        .form-group
          .col-md-10.col-md-offset-2
            = f.submit 'Log in', :class=>'btn btn-primary'
        .form-group
          .col-md-offset-2.col-md-10
            Not registered?
            = link_to "Sign up", new_registration_path(resource_name)

        = render "devise/shared/links"
