<%- model_class = Article -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <h2><%= article.title %></h2>
        <p><%= article.full_text %></p>
      </tr>
    <% end %>
  </tbody>
</table>
